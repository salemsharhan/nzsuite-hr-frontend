# ============================================
# Supabase Configuration
# ============================================
# Your Supabase project URL
# Get this from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
# Used in: client/src/services/supabase.ts, client/src/services/api.ts, scripts/setup-supabase.js
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anonymous Key (safe for client-side use)
# This is the public key that can be exposed in the frontend
# Get this from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
# Used in: client/src/services/supabase.ts, client/src/services/api.ts
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (SERVER-SIDE ONLY - NEVER expose to client)
# This key bypasses Row Level Security - use only on the server
# Get this from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
# Used in: client/src/services/api.ts (for adminApi), scripts/setup-supabase.js
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
VITE_SUPABASE_SERVICE_KEY=your-service-role-key-here

# Supabase API Access Token (for Management API)
# Used in: execute_sql_api.ts
SUPABASE_ACCESS_TOKEN=your-access-token-here

# Supabase Project Reference
# Used in: execute_sql_api.ts, scripts
SUPABASE_PROJECT_REF=your-project-ref-here

# Supabase Publishable Key
SUPABASE_PUBLISHABLE_KEY=your-publishable-key-here

# Supabase Secret Key
SUPABASE_SECRET_KEY=your-secret-key-here

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string for Supabase
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
# Or use the connection pooler: postgresql://postgres:[YOUR-PASSWORD]@aws-0-[region].pooler.supabase.com:6543/postgres
# Used in: server/db.ts, server/_core/env.ts, drizzle.config.ts
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# ============================================
# Authentication & OAuth Configuration
# ============================================
# JWT secret for signing cookies and tokens
# Generate a strong random string (at least 32 characters)
# Used in: server/_core/env.ts
JWT_SECRET=your-jwt-secret-key-here-minimum-32-characters

# OAuth Server URL
# The URL of your OAuth authentication server
# Used in: server/_core/env.ts
OAUTH_SERVER_URL=https://your-oauth-server.com

# OAuth Portal URL (for client-side login)
# Used in: client/src/const.ts
VITE_OAUTH_PORTAL_URL=https://your-oauth-portal.com

# Application ID for OAuth
# Used in: server/_core/env.ts, client/src/const.ts
VITE_APP_ID=your-app-id-here

# Owner OpenID
# The OpenID of the application owner/admin
# Used in: server/_core/env.ts, server/db.ts
OWNER_OPEN_ID=your-owner-open-id-here

# ============================================
# Forge API Configuration (Maps & Storage Services)
# ============================================
# Frontend Forge API Key (for client-side map services)
# Used in: client/src/components/Map.tsx
VITE_FRONTEND_FORGE_API_KEY=your-frontend-forge-api-key-here

# Frontend Forge API URL
# Used in: client/src/components/Map.tsx
VITE_FRONTEND_FORGE_API_URL=https://forge.butterfly-effect.dev

# Backend Forge API URL (for server-side operations: maps, storage)
# Used in: server/_core/env.ts, server/storage.ts, server/_core/map.ts
BUILT_IN_FORGE_API_URL=https://forge.butterfly-effect.dev

# Backend Forge API Key (for server-side operations: maps, storage)
# Used in: server/_core/env.ts, server/storage.ts, server/_core/map.ts
BUILT_IN_FORGE_API_KEY=your-backend-forge-api-key-here

# ============================================
# Server Configuration
# ============================================
# Node environment: development, production, or test
# Used in: server/_core/env.ts, server/_core/index.ts, server/_core/vite.ts, server/index.ts
NODE_ENV=development

# Server port (default: 3000)
# Used in: server/_core/index.ts, server/index.ts
PORT=3000

# ============================================
# Optional Application Configuration
# ============================================
# Application title (optional - mentioned in docs but may not be actively used)
# VITE_APP_TITLE=HR Management System

# Application logo URL (optional - mentioned in docs but may not be actively used)
# VITE_APP_LOGO=/images/logo-icon.png

